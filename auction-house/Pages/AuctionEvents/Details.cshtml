@page
@model auction_house.Pages.AuctionEvents.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AuctionEvent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionEvent.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionEvent.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionEvent.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionEvent.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionEvent.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionEvent.EndTime)
        </dd>
    </dl>
</div>
<div>
    <h4>Items in this Auction</h4>
    <hr />
    @if (Model.AuctionEvent.Items != null && Model.AuctionEvent.Items.Any())
    {
        <ul>
            @foreach (var item in Model.AuctionEvent.Items)
            {
                <li>
                    <strong>@Html.DisplayFor(_ => item.Name)</strong> -
                    @Html.DisplayFor(_ => item.Description)
                    Price: @Html.DisplayFor(_ => item.StartingPrice)

                </li>
            }
        </ul>
    }
    else
    {
        <p>No items available for this auction.</p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AuctionEvent?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
