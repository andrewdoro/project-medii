@page
@model auction_house.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuctionEvent[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionEvent[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionEvent[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionEvent[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuctionEvent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AuctionEventId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AuctionEventId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AuctionEventId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
